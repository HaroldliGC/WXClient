/* components/inputCell/InputCell.wxss */
.weui_cell{
    padding: 10px 15px;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    line-height: 1.47058824;
    font-size: 17px;
    background-color: #FFFFFF;
}

.weui_cell::before{
    content: " ";
    position: absolute;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    left: 15px;
    z-index: 2;
}

.weui_cell_bd{
    flex: 1;
}

.weui_input{
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: 14px;
  color: inherit;
  height: 1.47058824em;
  line-height: 1.47058824;
}

.weui_label{
    display: block;
    width: 105px;
    word-wrap: break-word;
    word-break: break-all;
}
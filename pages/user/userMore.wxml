<!--pages/user/userMore.wxml-->
<view class="userMorePage">
  <form bindsubmit='formSubmit' bindreset="formReset">
    <view class="blank"></view>
    <view class="weui_cell">
      <view class="weui_cell_hd">
        <label class="weui_label">手机号</label>
      </view>
      <view class="weui_cell_bd">
        <input name='phone' class="weui_input" type="text" value='{{user.Phone}}'></input>
      </view>
    </view>
    <view class="weui_cell">
      <view class="weui_cell_hd">
        <label class="weui_label">性别</label>
      </view>
      <view class="weui_cell_bd">
        <input name='gender' class="weui_input" type="text" value='{{user.Gender}}'></input>
      </view>
      <view class="weui_cell_ft">
        <switch checked bindchange="switchChange"/>
      </view>
    </view>
    <view class="buttonContainer">
      <button form-type='submit' class="weui_btn weui_btn_plain_primary">
        确认
      </button>
    </view>
  </form>
</view>
/* pages/user/register.wxss */
page {
  height: 100%;
}

.registerPage {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.contentArea {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
    flex-shrink: 0;
    flex-grow: 1;
    background: rgb(191,155,81);
    justify-content: space-between;
}

.formContainer {
  margin: 0 auto;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 80%;
  max-width: 360px;
  min-width: 290px;
  margin-top: 30px;
}

.inputContainer {
    margin-bottom: 15px;
    width: 100%;
}

.fieldInput {
    display: block;
    border-radius: 25px;
    background: rgb(95,77,41);
    border: 0;
    color: white;
    padding: 0 20px;
    height: 50px;
    font-size: 16px;
    margin-left: auto;
    margin-right: auto;
}

.fieldInput:hover, .fieldInput:focus {
    border-color: #66afe9;
    outline: 0;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(102,175,233,0.6);
    box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(102,175,233,0.6);
}

.login_word {
  color: #ffffff;
  font-size: 48px;
  width: 100%;
  text-align: center;
  margin: 55px 0;
}

.buttonArea {
  width:100%;
  display: flex;
}

.loginBtn{
  background: rgb(161,113,13);
  border-radius: 25px;
  outline-style: none;
  border: 0;
  font-size: 18px;
  height: 50px;
  width: 40%;
  margin: 20px 5%;
  color: white;
  text-align: center;
  line-height: 50px;
}

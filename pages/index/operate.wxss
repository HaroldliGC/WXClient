page {
  width:100%;
  height:100%;
  overflow: hidden
}

.operatePage {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin-top: 5%;
}

.Table {
  width: 100%;
  height: 100%;
}

.Thead {
  text-align: center;
  width:100%;
  border: 1px solid #CDCDCD;
  background-color: #00a2de;
  color: #fff;
  font-weight: bold;
  font-size: 1em;
  margin: 5px 0;
  height:2rem;
  line-height:2rem;
}

.Tbody {
  width:100%;
}

.orderArea {
  width: 90%;
  margin: 0 5%;
}

.tableRow {
  height: 1.786rem;
  border-top: 0;
  display: flex;
  border: 1px solid #ddd;
  font-size: 0.8em;
}

.tableKey {
  background-color: #e3eff7;
  width:35%;
  padding: 0 3px;
  line-height: 2em;
}

.tableValue {
  text-align: left;
  padding: 0 3px;
  overflow: hidden;
  line-height: 2em;
}

.Tfoot {
  text-align: center;
  width:100%;
  margin: 5px 0;
  display: flex;
}

.Button {
  border-radius: 25px;
  outline-style: none;
  border: 0;
  font-size: 18px;
  height: 30px;
  width: 40%;
  margin: 8px 5%;
  color: white;
  text-align: center;
  line-height: 30px;
  background-color: #00a2de;
}
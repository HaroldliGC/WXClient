/* pages/index/add.wxss */
page {
  width:100%;
  height:100%;
}

.addPage {
  width:100%;
  height:100%;
}

.inputItem {
  margin: 10px 10px;

}

.Panel {
  box-sizing: border-box;
  padding: 0.5rem;
  height: 250px;
  background-color: #fff;
  border: 1px solid #eee;
  border-radius: 4px;
  margin: 10px 10px;
  margin-top: 20px;
}

.PanelHeader {
  align-items: center;
  padding: 7px 0 0;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  width: 100%;
  height: 33px;
  border-bottom: 1px solid #eee;
  text-align: center;
}

.PanelBody {
  align-items: center;
  padding: 7px 0 0;
  width:100%;
  height:130px;
}

.PanelFoot {
  align-items: center;
  padding: 7px 0 0;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  width: 100%;
  height: 33px;
  border-top: 1px solid #eee;
  display: flex;
}

.myButton{
  background: rgb(93,194,214);
  border-radius: 25px;
  outline-style: none;
  border: 0;
  font-size: 14px;
  height: 30px;
  width: 90%;
  margin: 0 5%;
  margin-top: 3px;
  color: white;
  text-align: center;
  line-height: 30px;
}
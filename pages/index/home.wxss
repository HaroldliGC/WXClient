/* pages/index/home.wxss */
page {
  height: 100%;
}

.topArea {
  width: 100%;
  height: 38%;
}

.bottomArea {
  width: 100%;
  height: 62%;
}

.headerBar {
  width: 100%;
  height: 53px;
}

.navBar {
  background-color: #0a80be;
  width: 100%;
  height: 50px;
  display: flex;
}

.navItem {
  height: 100%;
  width: 100%;
  color: white;
  line-height: 47px;
  margin-left: 10px;
  font-weight: bold;
  text-align: center;
  flex-shrink: 1;
}


.navItem-hover {
  background: rgb(90,196,235);
}

.searchArea {
  margin: 10px 0; 
  display: flex;
  justify-content: center;
  align-items: center;
}

.search{
    width:200px;
    height:26px;
    display: flex;
}

.searchInputMain{
    width:100%;
    height:100%;
    padding:3px 6px;
    font-size: 12px;
    border:1px solid #CCC;
    border-radius: 4px;
    text-decoration: none;
}

.searchButton{
    width:50px;
    height:34px;
    padding: 1px 3px;
    border: 1px solid #CDCDCD;
    color: #FFF;
    margin-left: 5px;
    background: rgb(255,150,52);
    font-size: 14px;
    text-align: center;
    line-height: 34px;
}

.bookPanel {
  box-sizing: border-box;
  padding: 0.5rem;
  height: 200px;
  overflow-y: auto;
  background-color: #fff;
  border: 1px solid #eee;
  border-radius: 4px;
  margin: 10px 10px;
  margin-top: 20px;
}

.panelHeader {
  align-items: center;
  padding: 7px 0 0;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  width: 100%;
  height: 33px;
  border-bottom: 1px solid #eee;
}

.bookItem{
  height:100%;
  width: 100%;
  color: black;
  font-size: 0.8em;
  text-align: left;
}

.icon {
  width:20px;
  height: 100%;
  flex-shrink: 0;
  margin-right: 5px;
}

.image{
  width:16px;
  height: 16px;
}

.linkItem {
  display: flex;
  width:100%;
  height:30px;
}
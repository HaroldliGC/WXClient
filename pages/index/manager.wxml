<!--pages/index/manager.wxml-->
<view class="managerPage">
  <view class="headerBar">
    <view class="navBar">
      <navigator url='home' class="navItem" hover-class='navItem-hover'>书城</navigator>
      <view class="navItem" hover-class='navItem-hover'>在阅</view>
      <navigator url='history' class="navItem" hover-class='navItem-hover'>历史</navigator>
    </view>
  </view>
  <view class="orders">
    <view class="item" wx:for="{{Orders}}" wx:key="id">
      <navigator url="operate?bookId={{item.Book.Id}}&orderId={{item.Id}}" class="Navitem">
        <image src="{{bookImage}}" class="Image" mode='aspectFit'></image>
        <view class="bookInf">
          <view class="infItem">
            书名:{{item.Book.Name}}
          </view>
          <view class="infItem">
            订单状态:{{item.State}}
          </view>
        </view>
      </navigator>
    </view>
  </view>
</view>

/* pages/book/bookReviews.wxss */
.bookReviewsPage{
  
}

.bookInf{
  width:100%;
  height:100px;
  display: flex;
  font-size: 0.8em;
}

.bookImage{
  width:30%;
  height: 100%;
}

.bookInfList {
  width:64%;
  display: flex;
  flex-direction: column;
  margin: 3% 3%;
}

.bookAuthor {
  font-size: 0.8em;
  color:#6495ED;
}

.bookInfItem {
  width:100%;
  height: 30%;
  margin-bottom: 3%;
}

.line {
  width:100%;
  height:30px;
  line-height: 30px;
  font-size: 15px;
  padding-left: 15px;
  background-color: #EAEAEA;
}

.reviewItem {
  padding: 0 3%;
  padding-top: 5px;
}

.reviewItemTitle {
  color: #8B8386;
  font-size: 0.7em;
}

.reviewItemInf {
  font-size: 0.8em;
  border-bottom:1px solid #DBDBDB;
  padding-bottom:5px;
}

.myReview {
  background-color: #FCFCFC;
  width:100%;
  height: 50px;
  position: fixed;
  bottom:0;
  left: 0;
}

.formGroup {
  width:90%;
  height: 80%;
  margin: auto;
  display: flex;
  margin-top:5px;

}

.formInput {
  width:80%;
  height: 100%;
  border-bottom:1px solid #CDCDCD;
}

.formButton {
  width:20%;
  height: 35px;
  line-height: 35px;
  margin: auto;
  background:rgb(93,194,214);
  border-radius:25px;
  outline-style:none;
  border:0;
  font-size:18px;
  color:white;
  text-align:center;
}